<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>SMP_ScampussInvigorate</defName>
		<hediffClass>Hediff_High</hediffClass>
		<label>scampuss invigoration</label>
		<description>A boost of energy, from being nearby a scampuss. Reduces tiredness gain for a short period of time.</description>
		<defaultLabelColor>(0.8, 0.6, 1.0)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<isBad>false</isBad>
		<comps>
			 <li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-10.0</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			 </li>
		</comps>
		<stages>
			<li>
				<restFallFactor>0.9</restFallFactor>
			</li>
		</stages>
	</HediffDef>
 
</Defs>